<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/textView2"
        style="@style/tv_title_style"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="المشتريات"
        android:textColor="#FFD600" />

    <Button
        android:id="@+id/buy_product"
        style="@style/btn_style_main_div"
        android:text="منتجات"
        android:drawableRight="@android:drawable/ic_input_add"
        />

    <Button
        android:id="@+id/buy_group"
        style="@style/btn_style_main_div"
        android:drawableRight="@android:drawable/ic_input_add"
        android:text="إضافة مجموعة "
       />

    <Button
        android:id="@+id/buy_reports"
        style="@style/btn_style_main_div"
        android:drawableRight="@drawable/report_icon"
        android:text="تقارير المشتريات"
    />

    <Button
        android:id="@+id/buy_bill"
        style="@style/btn_style_main_div"
        android:drawableRight="@drawable/bills"
        android:text="فواتير المشتريات"
        />
</LinearLayout>