<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="10">


    <TextView
        android:id="@+id/textView32"
        style="@style/tv_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="اسم المندوب" />

    <Button
        android:id="@+id/button14"
        style="@style/btn_style_main_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/edit"
        android:text="تعديل بيانات المندوب" />

    <Button
        android:id="@+id/button15"
        style="@style/btn_style_main_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/report_icon"
        android:text="عرض ذمم المندوب " />

    <Button
        android:id="@+id/button16"
        style="@style/btn_style_main_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/report_icon"
        android:text="عرض ارصدة المندوب " />

    <Button
        android:id="@+id/button17"
        style="@style/btn_style_main_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/map"
        android:text="عرض موقع المندوب" />
</LinearLayout>