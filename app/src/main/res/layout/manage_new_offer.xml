<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="10"
   >

            <TextView
                android:id="@+id/textView5"
                style="@style/tv_title_style"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:text="إضافة عرض جديد"
                android:layout_weight="3"
               />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/input_layout_style"
                android:hint="اسم المنتج"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/input_layout_style"
        android:hint="اسم المنتج"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <Button
            style="@style/btn_style_main_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D1CFCF"
            android:text="إلى تاريخ"
            android:textColor="#000000" />

        <Button
            style="@style/btn_style_main_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D1CFCF"
            android:text="من تاريخ"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
        android:layout_marginTop="8dp">

                <Button
                    style="@style/submit_btn_style"
                    android:text="إلغاء"
                    />

                <Button
                    style="@style/submit_btn_style"
                    android:text="حفظ" />
            </LinearLayout>
</LinearLayout>